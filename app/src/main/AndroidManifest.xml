<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangke.notiontodo">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotionTodo">
        <activity
            android:name=".main.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pagemanager.AddPageActivity"
            android:exported="true" />

        <activity
            android:name=".addblock.AddBlockActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.NotionTodo.Transparent" />

        <activity
            android:name=".setting.SettingActivity"
            android:exported="true" />

        <activity
            android:name=".pagemanager.PageManagerActivity"
            android:exported="true" />

        <activity
            android:name=".code.OpenSourceActivity"
            android:exported="true" />

        <activity
            android:name=".editblock.EditBlockActivity"
            android:exported="true"
            android:theme="@style/Theme.NotionTodo.Transparent" />
    </application>

</manifest>